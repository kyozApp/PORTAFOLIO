---
import { Image } from "astro:assets";
import perfil from "@assets/home/Perfil.webp";
---

<section class="section_profile">
    <div class="image_container">
        <Image
            src={perfil}
            alt="Foto de perfil"
            class="imgPerfil"
            loading="eager"
        />
    </div>

    <h2>&lt;/&gt; Erick Anthony Palomino Ruiz</h2>
    <p class="p">
        No soy un robot, <span class="spanPerfil1"
            >soy un desarrollador Full Stack
        </span>apasionado por la <span class="spanPerfil2">programaci√≥n.</span>
    </p>
</section>

<style>
    .section_profile {
        color: #f8fafc;
        margin: 0 40px 0;
    }

    .image_container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 150px;
    }

    .imgPerfil {
        width: 100px;
        height: 100px;
        border-radius: 100%;
        margin-bottom: 1rem;
    }

    .p {
    }

    .spanPerfil1 {
        color: #f87171;
    }

    .spanPerfil2 {
        color: #3b82f6;
    }

    @media (min-width: 768px) {
        .section_profile {
            margin: 0 20%;
        }

        .image_container {
            justify-content: start;
            margin: 50px 0 0 50px;
            height: 200px;
        }

        .imgPerfil {
            width: 150px;
            height: 150px;
            border-radius: 100%;
            margin-bottom: 1rem;
        }

        .p {
            margin-top: 16px;
        }
    }
</style>
